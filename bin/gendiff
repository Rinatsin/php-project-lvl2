#!/usr/bin/env php

<?php

use function Differ\genDiff;

$loadPath1 = __DIR__ . '/../../../autoload.php';
$loadPath2 = __DIR__ . '/../vendor/autoload.php';

if (file_exists($loadPath1)) {
    include_once $loadPath1;
} else {
    include_once $loadPath2;
}

$doc = <<<DOC
Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help                     Show this screen
  -v --version                  Show version
  --format <fmt>                Report format [default: pretty]
DOC;

$argc = Docopt::handle($doc);

if ($argc['<firstFile>']) {
  $diff = genDiff($argc['<firstFile>'], $argc['<secondFile>'], $argc['<fmt>']);
  echo $diff;
  exit;
}

foreach ($argc as $k => $v) {
  echo $k . ': ' . json_encode($v) . PHP_EOL;
}
